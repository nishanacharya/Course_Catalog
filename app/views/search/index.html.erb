<%= form_tag(search_index_path, :method => "get", id: "search-form", remote: true) do %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Courses", onkeyup: "$('#search-form').submit();" %>
	<%= select_tag :subject, options_from_collection_for_select(@subjects, "id", "Name"), include_blank: true, class: "form-control", onkeyup: "$('#search-form').submit();"%>
<% end %>
<div id = "results"><%= render "results" %></div>